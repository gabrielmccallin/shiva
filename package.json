{
  "name": "shiva",
  "version": "2.5.4",
  "description": "A minimal abstraction layer for VanillaJS DOM manipulation, events and animation. No framework required.",
  "main": "shiva-cjs.js",
  "types": "shiva.d.ts",
  "config": {
    "package-name": "shiva"
  },
  "scripts": {
    "start": "echo And in all, the creator, preserver, destroyer, revealer and concealer of all that is. && npm run dev",
    "build": "rimraf dist && npm run build:modules && npm run build:global-cjs && npm run copy-files && jest",
    "build:global-cjs": "rollup -c && uglifyjs ./dist/shiva-global.js -c -m -o ./dist/shiva-global.js",
    "build:modules": "tsc && npm run dts-bundle && npm run delete-empty && npm run delete-promise-polyfill-from-global-declaration && npm run concat-global-declaration",
    "remove-temporary": "rimraf dist/types",
    "concat-global-declaration": "concat -o dist/shiva-global.d.ts libs/shiva-global-start.d.ts dist/shiva-global.d.ts libs/shiva-global-end.d.ts",
    "copy-files": "mkdirp dist && copy package.json dist && copy README.md dist && copy CHANGELOG.md dist",
    "ci-publish": "cd dist && ci-publish",
    "dts-bundle": "dts-bundle --name shiva --main dist/**/*.d.ts --outputAsModuleFolder --out shiva.d.ts",
    "test": "jest --watch",
    "delete-empty": "node libs/delete-empty-files dist",
    "delete-promise-polyfill-from-global-declaration": "node libs/remove-promise-polyfill.js",
    "playground:dev": "rollup -c rollup.playground.js -w",
    "playground:serve": "serve ./playground -p 6536",
    "playground:create": "mkdirp playground && copyfiles -f libs/index.html playground",
    "playground": "npm run playground:create && npm-run-all --parallel playground:dev playground:serve"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/gabrielmccallin/shiva"
  },
  "author": "Gabriel McCallin",
  "license": "MIT",
  "homepage": "https://gabrielmccallin.bitbucket.io/shiva",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "babel-preset-es2015": "^6.24.1",
    "concat": "^1.0.3",
    "copy": "^0.3.2",
    "copyfiles": "^2.1.0",
    "dts-bundle": "^0.7.2",
    "jasmine-core": "^2.99.1",
    "jest": "^23.6.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "promise-polyfill": "^8.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "rollup-plugin-uglify": "^6.0.0",
    "serve": "^10.1.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^3.1.6",
    "uglify-js": "^3.4.9"
  }
}
