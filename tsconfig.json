{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "moduleResolution": "node",
        "declaration": true,
        "lib": [ "DOM", "ES2022" ],
        "types": [ "node" ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules", "**/*.test.ts"
    ]
}
