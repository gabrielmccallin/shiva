{
  "name": "shiva",
  "version": "2.4.0",
  "description": "A JavaScript library for programming the web.",
  "main": "shiva-cjs.js",
  "types": "shiva.d.ts",
  "config": {
    "package-name": "shiva"
  },
  "scripts": {
    "start": "echo And in all, the creator, preserver, destroyer, revealer and concealer of all that is. && npm run dev",
    "build": "rimraf dist && npm run build:modules && npm run build:global-cjs && npm run copy-files && npm test",
    "build:global-cjs": "rollup -c",
    "build:modules": "tsc && npm run dts-bundle && npm run delete-empty && npm run delete-promise-polyfill-from-global-declaration && npm run concat-global-declaration",
    "remove-temporary": "rimraf dist/types",
    "concat-global-declaration": "concat -o dist/shiva-global.d.ts libs/shiva-global-start.d.ts dist/shiva-global.d.ts libs/shiva-global-end.d.ts",
    "copy-files": "mkdirp dist && copy package.json dist && copy README.md dist && copy CHANGELOG.md dist",
    "ci-publish": "cd dist && ci-publish",
    "dts-bundle": "dts-bundle --name shiva --main dist/**/*.d.ts --outputAsModuleFolder --out shiva.d.ts",
    "dev": "parallelshell \"npm run serve\" \"npm run rollup-watch\"",
    "serve": "npm run build && serve ./dist -p 1347",
    "rollup-watch": "rollup -c -o ./dist/shiva-global.js -f iife -w",
    "test": "karma start ./karma.conf.js --single-run --colors",
    "delete-empty": "node libs/delete-empty-files dist",
    "delete-promise-polyfill-from-global-declaration": "node libs/remove-promise-polyfill.js",
    "env": "env"
  },
  "dependencies": {
    "promise-polyfill": "^6.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/gabrielmccallin/shiva" 
  },
  "author": "Gabriel McCallin",
  "license": "MIT",
  "homepage": "https://gabrielmccallin.bitbucket.io/shiva",
  "devDependencies": {
    "concat": "^1.0.3",
    "copy": "^0.3.0",
    "dts-bundle": "^0.7.2",
    "jasmine-core": "^2.6.4",
    "karma": "^1.6.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "mkdirp": "^0.5.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-watch": "^3.2.2",
    "serve": "^5.1.5",
    "typescript": "^2.4.1"
  }
}
