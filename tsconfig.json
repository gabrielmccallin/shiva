{
    "compilerOptions": {
        "target": "es5",
        "declarationDir": "dist",
        "declaration": true,
        "removeComments": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
        "types": [
            "jest"
        ],
        "lib": [
            "es5",
            "es2015.promise",
            "es2015.proxy",
            "dom",
            "scripthost",
            "es2015.core"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/playground/**/*"
    ]
}